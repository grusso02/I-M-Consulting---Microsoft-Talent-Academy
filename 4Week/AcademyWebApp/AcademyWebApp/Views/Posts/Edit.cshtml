@model PostViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Item.id" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Item.userId" class="control-label"></label>
                <select asp-for="Item.userId" asp-items="Model.Users" class="form-control"></select>
                <span asp-validation-for="Item.userId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.title" class="control-label"></label>
                <input asp-for="Item.title" class="form-control" />
                <span asp-validation-for="Item.title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.body" class="control-label"></label>
                <textarea asp-for="Item.body" class="form-control"></textarea>
                <span asp-validation-for="Item.body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

